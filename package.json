{
  "name": "odoo-xmlrpc-ts",
  "version": "1.0.0",
  "description": "Type-safe Odoo XML-RPC client for Node.js written in TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest --coverage",
    "test:ci": "jest --coverage --ci",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "prepare": "husky install",
    "postinstall": "husky install",
    "prepublishOnly": "pnpm test && pnpm run lint",
    "preversion": "pnpm run lint",
    "version": "pnpm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "packageManager": "pnpm@8.0.0",
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "keywords": [
    "odoo",
    "xmlrpc",
    "typescript",
    "erp",
    "api-client"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/odoo-xmlrpc-ts.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/odoo-xmlrpc-ts/issues"
  },
  "homepage": "https://github.com/yourusername/odoo-xmlrpc-ts#readme",
  "dependencies": {
    "xmlrpc": "^1.3.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.6",
    "@types/xmlrpc": "^1.3.10",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "^9.14.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "files": [
    "dist/**/*"
  ],
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
